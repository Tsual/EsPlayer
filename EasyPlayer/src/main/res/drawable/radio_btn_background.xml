<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="#81D4FA" />
            <stroke
                android:width="1dp"
                android:color="#81D4FA" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item >
        <shape>
            <solid android:color="#ffffff" />
            <stroke
                android:width="1dp"
                android:color="#ffffff" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>